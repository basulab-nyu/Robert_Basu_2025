#pragma rtGlobals=1macro Replace_Suffix()pReplace_Suffix()proc pReplace_Suffix(str_input,str_target,str_output)string str_inputprompt str_input "input waves ?"string str_targetprompt str_target "target string ?"string str_outputprompt str_output "output string ?"string str_liststring str_suffixvariable var_indexstr_list = sortlist(wavelist(str_input,";",""),";",16)print replacestring(";",str_list,"\r")silent 1pauseupdatevar_index = 0do	str_suffix = ""	str_suffix = stringfromlist(var_index,str_list)[strsearch(stringfromlist(var_index,str_list),str_target,0,2),inf]	rename $stringfromlist(var_index,str_list), $replacestring(str_suffix,stringfromlist(var_index,str_list),str_output)	var_index+=1while(var_index<itemsinlist(str_list))resumeupdateend