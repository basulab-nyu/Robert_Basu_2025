#pragma rtglobals=1macro check_scaling()pcheck_scaling()proc pcheck_scaling(str_input)string str_inputprompt str_input "input?"if(strlen(str_input) == 0)	str_input = "*"endifstring str_list = sortlist(wavelist(str_input,";",""),";",16)make/o/n=(itemsinlist(str_list),2) w_scales = nansetdimlabel 1,0,offset,w_scalessetdimlabel 1,1,delta,w_scalesvariable var_index = 0pauseupdatedo	w_scales[var_index][%offset] = dimoffset($stringfromlist(var_index,str_list),0)	w_scales[var_index][%delta] = dimdelta($stringfromlist(var_index,str_list),0)	setdimlabel 0,var_index,$stringfromlist(var_index,str_list),w_scales	var_index+=1while(var_index<itemsinlist(str_list))resumeupdateend