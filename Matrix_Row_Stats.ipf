#pragma rtGlobals=1		// Use modern global access method.#include <Waves Average>macro Matrix_Row_Stats()pMRS()proc pMRS(str_input)string str_inputprompt str_input "input waves ?"string str_list_sort = sortlist(wavelist(str_input,";",""),";",16)string str_list_sort_print = sortlist(wavelist(str_input,"\r",""),"\r",16)print str_list_sort_printvariable/g var_index = 0silent 1pauseupdatedo	string/g inWave = stringfromlist(var_index,str_list_sort)	duplicate/o $inWave transwave	matrixtranspose transwave	variable/g var_count = 0	make/o/n=(dimsize(transwave,1)) $(nameofwave($inWave)+"_avg")	make/o/n=(dimsize(transwave,1)) $(nameofwave($inWave)+"_sem")	make/o/n=(dimsize(transwave,1)) $(nameofwave($inWave)+"_SD")	do		duplicate/o/r=[][var_count] transwave tempwave		wavestats/q tempwave		$(nameofwave($inWave)+"_avg")[var_count] = V_avg		$(nameofwave($inWave)+"_sem")[var_count] = V_sem		$(nameofwave($inWave)+"_SD")[var_count] = V_sdev		var_count+=1	while (var_count<dimsize(transwave,1))	var_index += 1while(var_index<itemsinlist(str_list_sort))killwaves tempwavekillwaves transwaveresumeupdatebeepend