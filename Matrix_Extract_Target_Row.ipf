#pragma rtGlobals=1		// Use modern global access method.macro Matrix_Extract_Target_Row()pMatrix_Extract_Target_Row()proc pMatrix_Extract_Target_Row(str_input,str_target)string str_inputprompt str_input "input waves (textwave) ?"string str_targetprompt str_target "target row label ?"silent 1variable/g var_index = 0do	string/g str_list = sortlist(wavelist($str_input[var_index],";",""),";",16)	variable/g var_index2 = 0	do		if(finddimlabel($stringfromlist(var_index2,str_list),0,str_target)>=0)			make/o/n=(dimsize($stringfromlist(var_index2,str_list),1)) $(stringfromlist(var_index2,str_list)+"_"+str_target) = nan			$(stringfromlist(var_index2,str_list)+"_"+str_target) = $stringfromlist(var_index2,str_list)[%$str_target][p]			copydimlabels/cols=0 $stringfromlist(var_index2,str_list),$(stringfromlist(var_index2,str_list)+"_"+str_target)		endif		var_index2+=1	while(var_index2<itemsinlist(str_list))	var_index+=1while(var_index<numpnts($str_input))end