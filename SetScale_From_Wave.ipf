#pragma rtGlobals=1Macro SetScale_from_Waves()SSfW()proc SSfW(str_y,str_x)string str_yprompt str_y "waves to scale ?"string str_xprompt str_x "scaling waves ?"string/g str_list_y = sortlist(wavelist(str_y,";",""),";",16)string/g str_list_x = sortlist(wavelist(str_x,";",""),";",16)string/g str_print_y = sortlist(wavelist(str_y,"\r",""),"\r",16)string/g str_print_x = sortlist(wavelist(str_x,"\r",""),"\r",16)print str_print_yprint str_print_xvariable/g var_index = 0do	silent 1pauseupdate	string/g str_waves_y = stringfromlist(var_index,str_list_y)	string/g str_waves_x = stringfromlist(var_index,str_list_x)	variable/g var_offset = $str_waves_x[0]	variable/g var_delta = $str_waves_x[1]-$str_waves_x[0]	setscale/p x,var_offset,var_delta,$str_waves_y	var_index += 1while(var_index < itemsinlist(str_list_y))resumeupdateend