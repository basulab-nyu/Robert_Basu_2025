#pragma rtglobals=1macro list_folders()plist_folders()proc plist_folders(str_target)string str_targetprompt str_target "target name ?"if(strlen(str_target) == 0)	str_target = "*"endifstring str_listvariable var_index = 0pauseupdatedo	str_list = addlistitem(getindexedobjname("",4,var_index),str_list,";",inf)	var_index+=1while(var_index<countobjects("",4))str_list = sortlist(str_list,";",16)str_list = listmatch(str_list,str_target)print replacestring(";",str_list,"\r")make/o/t/n=(itemsinlist(str_list)) folder_list = stringfromlist(p,str_list)edit folder_listmovewindow 955.5,38,1198.5,590resumeupdateend