#pragma rtGlobals=1		// Use modern global access method.#include <Waves Average>macro Change_Sign_Waves_from_textref()pChange_Sign_Waves_from_textref()proc pChange_Sign_Waves_from_textref(str_input,str_output)string str_inputprompt str_input "input list (textwave) ?"string str_outputprompt str_output "output waves ?"silent 1pauseupdatevariable/g var_index = 0do	duplicate/o $($str_input[var_index]) $($str_input[var_index]+"_"+str_output)	$($str_input[var_index]+"_"+str_output) = 0 - $($str_input[var_index]+"_"+str_output)	var_index+=1while(var_index<numpnts($str_input))resumeupdateend