#pragma rtGlobals=1Macro scalarXwave_Serial()SxWS()proc SxWS(str_input,str_scalar)string str_inputprompt str_input "input waves ?"string str_scalarprompt str_scalar "multiplication factor ?"string str_list = sortlist(wavelist(str_input,";",""),";",16)print replacestring(";",str_list,"\r")variable var_index = 0pauseupdatedo	$stringfromlist(var_index,str_list) = $stringfromlist(var_index,str_list)*str2num(str_scalar)	var_index+=1while(var_index<itemsinlist(str_list))resumeupdateend