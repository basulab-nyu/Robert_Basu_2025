#pragma rtGlobals=1Macro Store_in_Table()SiT()proc SiT(str_input,str_selection)string str_inputprompt str_input "input waves ?"string str_selectionprompt str_selection "data only (0), +index (1), +label (2), label only (3) ?"string str_list = sortlist(wavelist(str_input,";",""),";",16)if(strlen(str_selection) == 0)	variable/g var_selection = 0else	variable/g var_selection = str2num(str_selection)endifif(strlen(str_list)>0)	edit	variable/g var_index = 0	do		if(var_selection == 0)			appendtotable $stringfromlist(var_index,str_list)		endif		if(var_selection == 1)			appendtotable $stringfromlist(var_index,str_list).id		endif		if(var_selection == 2)			appendtotable $stringfromlist(var_index,str_list).ld		endif		if(var_selection == 3)			appendtotable $stringfromlist(var_index,str_list).l		endif		var_index+=1	while(var_index<itemsinlist(str_list))endif