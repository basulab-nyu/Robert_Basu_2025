#pragma rtGlobals=1#include <Waves Average>macro uspdisplay_heatmap()proc pdisplay_heatmap(str_input)string str_inputprompt str_input "input waves ?"string str_list = sortlist(wavelist(str_input,";",""),";",16)print replacestring(";",str_list,"\r")variable var_indexvariable var_spanpauseupdatevar_index = 0do	display	movewindow 400,45,750,350	appendimage $stringfromlist(var_index,str_list)	modifyimage $stringfromlist(var_index,str_list) ctab= {*,*,rainbow,1}	if(stringmatch(stringfromlist(var_index,str_list),"*control*") == 1)		wavestats/q $stringfromlist(var_index,str_list)		var_span = v_max-v_min		modifyimage $stringfromlist(var_index,str_list) ctab= {*,v_max+0.5*var_span,grays,1}	endif	if(stringmatch(stringfromlist(var_index,str_list),"*LECglu*") == 1)		wavestats/q $stringfromlist(var_index,str_list)		var_span = v_max-v_min		modifyimage $stringfromlist(var_index,str_list) ctab= {*,v_max+0.5*var_span,green,1}	endif	if(stringmatch(stringfromlist(var_index,str_list),"*LECgaba*") == 1)		wavestats/q $stringfromlist(var_index,str_list)		var_span = v_max-v_min		modifyimage $stringfromlist(var_index,str_list) ctab= {*,v_max+0.5*var_span,red,1}	endif	modifygraph gfrelsize = 4	label bottom "position (cm)"	label left "ROI #"	textbox/C/N=title/F=0/B=1/A=MB/X=0/Y=100 stringfromlist(var_index,str_list)	var_index+=1while(var_index<itemsinlist(str_list))resumeupdateend