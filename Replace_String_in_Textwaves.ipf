#pragma rtGlobals=1#include <Waves Average>Macro Replace_String_in_Textwaves()pReplace_String_in_Textwaves()proc pReplace_String_in_Textwaves(str_input,str_oldstr,str_newstr)string str_inputprompt str_input "input waves ?"string str_oldstrprompt str_oldstr "target string ?"string str_newstrprompt str_newstr "output string ?"string str_listvariable var_indexvariable var_index2str_list = sortlist(wavelist(str_input,";",""),";",16)print replacestring(";",str_list,"\r")pauseupdatesilent 1var_index = 0do	var_index2 = 0	do		$stringfromlist(var_index,str_list)[var_index2] = replacestring(str_oldstr,$stringfromlist(var_index,str_list)[var_index2],str_newstr)		var_index2+=1	while(var_index2<numpnts($stringfromlist(var_index,str_list)))	var_index+=1while(var_index<itemsinlist(str_list))resumeupdateend