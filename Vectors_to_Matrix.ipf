#pragma rtGlobals=1Macro Vectors_to_Matrix()pVectors_to_Matrix()proc pVectors_to_Matrix(str_input,str_sort,str_output)string str_inputprompt str_input "input waves ?"string str_sortprompt str_sort "sort inputs ? (0 = no / 1 = yes [default])"string str_outputprompt str_output "output matrix ?"if(strlen(str_sort) == 0 || str2num(str_sort) == 1)	string str_list = sortlist(wavelist(str_input,";",""),";",16)else	string str_list = wavelist(str_input,";","")endifprint replacestring(";",str_list,"\r")variable var_indexvariable var_max_sizevariable var_max_indexsilent 1pauseupdatevar_max_size = 0var_max_index = 0var_index = 0do	if(var_max_size<dimsize($stringfromlist(var_index,str_list),0))		var_max_size = dimsize($stringfromlist(var_index,str_list),0)		var_max_index = var_index	endif	var_index+=1while(var_index<itemsinlist(str_list))make/o/n=(var_max_size,itemsinlist(str_list)) $str_output = nancopydimlabels/rows=0 $stringfromlist(var_max_index,str_list),$str_outputvar_index = 0do	$str_output[0,dimsize($stringfromlist(var_index,str_list),0)-1][var_index] = $stringfromlist(var_index,str_list)[p]	setdimlabel 1,var_index,$stringfromlist(var_index,str_list),$str_output	var_index+=1while(var_index<itemsinlist(str_list))resumeupdateend