#pragma rtGlobals=1Macro SetWave_from_Scale()SWfS()proc SWfS(str_input)string str_inputprompt str_input "input waves ?"string/g str_list = sortlist(wavelist(str_input,";",""),";",16)print sortlist(wavelist(str_input,"\r",""),"\r",16)variable/g var_index = 0do	silent 1pauseupdate	string/g str_waves = stringfromlist(var_index,str_list)	$str_waves = dimoffset($str_waves,0) + p*dimdelta($str_waves,0)	var_index += 1while (var_index < itemsinlist(str_list))resumeupdateend