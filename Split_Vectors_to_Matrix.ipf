#pragma rtGlobals=1		// Use modern global access method.#include <Waves Average>macro Split_Vectors_to_Matrix()pSplit_Vectors_to_Matrix()proc pSplit_Vectors_to_Matrix(str_input,str_chunk)string str_inputprompt str_input "input waves ?"string str_chunkprompt str_chunk "chunk size ?"string/g str_list = sortlist(wavelist(str_input,";",""),";",16)variable/g var_chunk = str2num(str_chunk)variable/g var_index = 0do	string/g str_waves = stringfromlist(var_index,str_list)	make/n=(var_chunk,numpnts($str_waves)/var_chunk) $("m_"+nameofwave($str_waves)) = nan	variable/g var_fill = 0	do		duplicate/r=[var_fill,var_fill+var_chunk-1] $str_waves $("m_"+nameofwave($str_waves)+"_"+num2str(var_fill/var_chunk))		$("m_"+nameofwave($str_waves))[][var_fill/var_chunk]=$("m_"+nameofwave($str_waves)+"_"+num2str(var_fill/var_chunk))[p]		//copydimlabels/ROWS=0 tempwave,$("m_"+nameofwave($str_waves))		setdimlabel 1,var_fill/var_chunk,$getdimlabel($("m_"+nameofwave($str_waves)+"_"+num2str(var_fill/var_chunk)),0,0),$("m_"+nameofwave($str_waves))		var_fill+=var_chunk	while(var_fill<numpnts($str_waves))	var_index+=1while(var_index<itemsinlist(str_list))killwaves/z tempwaveend