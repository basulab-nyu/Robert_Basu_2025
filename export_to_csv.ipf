#pragma rtGlobals=1macro export_to_csv()pexport_to_csv()proc pexport_to_csv(str_input,str_path)string str_inputprompt str_input "input waves ?"string str_pathprompt str_path "save path ? (default = pwd)"if(strlen(str_path) == 0)	pathinfo home	str_path = s_pathendifstring/g str_list = sortlist(wavelist(str_input,";",""),";",16)print replacestring(";",str_list,"\r")newpath/o/q str_symbpath, str_pathvariable/g var_index = 0do	string/g str_wave = stringfromlist(var_index,str_list)	edit/n=$("temp_table") $str_wave.ld	savetablecopy/p=str_symbpath/o/w=$("temp_table")/t=2 as stringfromlist(var_index,str_list)+".csv"	killwindow/z $("temp_table")	var_index+=1while(var_index < itemsinlist(str_list))