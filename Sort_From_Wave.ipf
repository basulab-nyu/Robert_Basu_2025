#pragma rtGlobals=1Macro Sort_from_Wave()SsSfW()proc SsSfW(str_input,str_sort)string str_inputprompt str_input "waves to sort ?"string str_sortprompt str_sort "sorting waves ?"string/g str_input_list = sortlist(wavelist(str_input,";",""),";",16)string/g str_sort_list = sortlist(wavelist(str_sort,";",""),";",16)print sortlist(wavelist(str_input,"\r",""),"\r",16)print sortlist(wavelist(str_sort,"\r",""),"\r",16)variable/g var_index = 0do	silent 1pauseupdate	string/g str_waves_target = stringfromlist(var_index,str_input_list)	string/g str_waves_sort = stringfromlist(var_index,str_sort_list)	sort $str_waves_sort,$str_waves_sort,$str_waves_target	var_index += 1while(var_index < itemsinlist(str_input_list))resumeupdateend