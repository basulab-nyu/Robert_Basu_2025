#pragma rtGlobals=1Macro load_csv()pload_csv()proc pload_csv(str_input,str_target)string str_inputprompt str_input "path ?"string str_targetprompt str_target "target ?"string str_root_pathif(strlen(str_input) == 0)	pathinfo home	str_root_path = s_pathelse	str_root_path = str_inputendifnewpath/o/q p_root_path, str_root_pathstring str_root_list = sortlist(indexedfile(p_root_path,-1,".csv"),";",16)string str_work_liststring str_loadvariable var_scrollvariable var_indexif(exists(str_target) == 1 && wavetype($str_target,1) == 2)	var_scroll = 0	do		str_work_list = listmatch(str_root_list,$str_target[var_scroll])		var_index = 0		do			str_load = str_root_path+stringfromlist(var_index,str_work_list)			print str_load			loadwave/a=$stringfromlist(var_index,str_work_list)/d/j/m/o/q str_load			var_index+=1		while(var_index<itemsinlist(str_work_list))		var_scroll+=1	while(var_scroll<dimsize($str_target,0))else	if(strlen(str_target) == 0)		str_target = "*"	endif	str_work_list = listmatch(str_root_list,str_target)	var_index = 0	do		str_load = str_root_path+stringfromlist(var_index,str_work_list)		print str_load		loadwave/a=$stringfromlist(var_index,str_work_list)/d/j/m/o/q str_load		var_index+=1	while(var_index<itemsinlist(str_work_list))endifend