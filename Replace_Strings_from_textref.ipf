#pragma rtGlobals=1		// Use modern global access method.#include <Waves Average>macro Replace_Strings_from_textref()pReplace_Strings_from_textref()proc pReplace_Strings_from_textref(str_input,str_target,str_output)string str_inputprompt str_input "input list (textwave) ?"string str_targetprompt str_target "target string ?"string str_outputprompt str_output "output string ?"silent 1pauseupdatevariable/g var_index = 0do	print stringfromlist(0,sortlist(wavelist($str_input[var_index],";",""),";",16))	rename $stringfromlist(0,sortlist(wavelist($str_input[var_index],";",""),";",16)),$replacestring(str_target,stringfromlist(0,sortlist(wavelist($str_input[var_index],";",""),";",16)),str_output)	var_index+=1while(var_index<numpnts($str_input))resumeupdateend