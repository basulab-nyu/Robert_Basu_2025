#pragma rtGlobals=1Macro replace_string_in_labels()preplace_string_in_labels()proc preplace_string_in_labels(str_input,str_target,str_new,str_dim)string str_inputprompt str_input "input waves ?"string str_targetprompt str_target "target string ?"string str_newprompt str_new "output string ?"string str_dimprompt str_dim "label dimension ?"string/g str_list = sortlist(wavelist(str_input,";",""),";",16)print replacestring(";",str_list,"\r")if(strlen(str_dim) == 0)	variable/g var_dim = 0else	variable/g var_dim = str2num(str_dim)endifvariable/g var_index = 0do	variable/g var_labels = 0	do		string/g str_outlabel = replacestring(str_target,getdimlabel($stringfromlist(var_index,str_list),var_dim,var_labels),str_new)		setdimlabel var_dim,var_labels,$str_outlabel,$stringfromlist(var_index,str_list)		var_labels+=1	while(var_labels<dimsize($stringfromlist(var_index,str_list),var_dim))	var_index+=1while(var_index<itemsinlist(str_list))end