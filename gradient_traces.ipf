#pragma rtGlobals=1macro gradient_traces()pGT()proc pGT(str_lowrange,str_highrange,str_basecolor)string str_lowrangeprompt str_lowrange "low bound ?"string str_highrangeprompt str_highrange "high bound ?"string str_basecolorprompt str_basecolor "base color ?"string str_list = tracenamelist("",";",1)//string/g str_list_work = tracenamelist("",",",1)string str_list_print = tracenamelist("","\r",1)print str_list_printstring/g str_namecolor = str_basecolorcolortab2wave $str_namecolorvariable/g var_lowrange = str2num(str_lowrange)*DimSize(M_colors,0)variable/g var_highrange = str2num(str_highrange)*DimSize(M_colors,0)variable/g var_index = 0variable/g var_total = itemsinlist(str_list)variable/g var_delta = (var_highrange-var_lowrange)/var_totaldosilent 1pauseupdate	//modifyGraph rgb($stringfromlist(var_index,str_list))=(var_basecolor,var_basecolor,var_basecolor,0)	//modifyGraph rgb($stringfromlist(var_index,str_list))=(M_colors[140+var_index*ink][0],M_colors[140+var_index*ink][1],M_colors[140+var_index*ink][2])	modifyGraph rgb($stringfromlist(var_index,str_list))=(M_colors[var_lowrange+var_index*var_delta][0],M_colors[var_lowrange+var_index*var_delta][1],M_colors[var_lowrange+var_index*var_delta][2])	var_index += 1while(var_index<var_total)killwaves/z M_colorsvariable/g var_lowcol = (10*var_highrange - 10*var_lowrange)*(str2num(str_lowrange))+(10*var_lowrange)variable/g var_highcol = (10*var_highrange - 10*var_lowrange)*(str2num(str_highrange))+(10*var_lowrange)//variable/g var_highcol = 0-(((10*var_highrange - 10*var_lowrange)*(str2num(str_lowrange))-(10*var_highrange)))ColorScale/C/N=text0/F=0/B=1/A=RC  ctab={10*var_lowrange,10*var_highrange,$str_namecolor,0},nticks=0, axisrange={var_lowcol,var_highcol}resumeupdateend