#pragma rtGlobals=1Macro Kill_2D_waves_in_folders()pK2Dwif()proc pK2Dwif()variable/g var_Fcount = countobjects("",4)string/g str_Fliststring/g str_Flist_printvariable/g var_Fscroll = 0silent 1pauseupdatedo	str_Flist = addlistitem(getindexedobjname("", 4, var_Fscroll),str_Flist,";",var_Fscroll)	str_Flist_print = addlistitem(getindexedobjname("", 4, var_Fscroll),str_Flist_print,"\r",var_Fscroll)	var_Fscroll+=1while(var_Fscroll<var_Fcount)variable/g var_Findex = 0do	string/g str_Fbrowse = stringfromlist(var_Findex,str_Flist)	print str_Fbrowse	setdatafolder(str_Fbrowse)	string/g str_Wlist = wavelist("*",";","")	variable/g var_Windex = 0	do		if(wavedims($stringfromlist(var_Windex,str_Wlist)) > 1)			print stringfromlist(var_Windex,str_Wlist)			killwaves $stringfromlist(var_Windex,str_Wlist)		endif		var_Windex+=1	while(var_Windex<itemsinlist(str_Wlist))	setdatafolder root:	var_Findex+=1while(var_Findex<var_Fcount)resumeupdateend