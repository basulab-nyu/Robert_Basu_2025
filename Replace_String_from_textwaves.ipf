#pragma rtGlobals=1macro Replace_String_from_textwaves()pReplace_String_from_textwaves()proc pReplace_String_from_textwaves(str_input,str_output)string str_inputprompt str_input "input textwave ?"string str_outputprompt str_output "output textwave ?"if(strlen(str_input) == 0)	str_input = "w_home_string"endifif(strlen(str_output) == 0)	str_output = "w_target_string"endifstring str_listvariable var_indexvariable var_index2silent 1pauseupdatevar_index = 0do	str_list = ""	str_list = sortlist(wavelist("*"+$str_input[var_index]+"*",";",""),";",16)	var_index2 = 0	do		print stringfromlist(var_index2,str_list)		print replacestring($str_input[var_index],stringfromlist(var_index2,str_list),$str_output[var_index])		rename $stringfromlist(var_index2,str_list),$(replacestring($str_input[var_index],stringfromlist(var_index2,str_list),$str_output[var_index]))		var_index2+=1	while(var_index2<itemsinlist(str_list))	var_index+=1while(var_index<numpnts($str_input))resumeupdateend