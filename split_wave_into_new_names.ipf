#pragma rtGlobals=1		// Use modern global access method.#include <Waves Average>macro split_wave_into_new_names()psplit_wave_into_new_names()proc psplit_wave_into_new_names(str_input,str_chunk,str_label)string str_inputprompt str_input "input wave ?"string str_chunkprompt str_chunk "chunk size ?"string str_labelprompt str_label "prefix textwave ?"variable/g var_chunk = str2num(str_chunk)silent 1pauseupdatevariable/g var_index = 0do	string/g str_prefix = $str_label[var_index/var_chunk]	duplicate/r=[var_index,var_index+var_chunk-1] $str_input $(str_prefix+str_input)	var_index+=var_chunkwhile(var_index<numpnts($str_input))resumeupdateend